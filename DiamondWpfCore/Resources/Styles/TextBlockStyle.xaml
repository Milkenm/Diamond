<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

	<Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock" x:Key="TextBlockStyle">
		<Setter Property="Effect">
			<Setter.Value>
				<DropShadowEffect Direction="314" Opacity="0.4" RenderingBias="Quality" ShadowDepth="4" BlurRadius="4" />
			</Setter.Value>
		</Setter>
		<Setter Property="Background">
			<Setter.Value>
				<SolidColorBrush Color="#3B0074FF" Opacity="0.1" />
			</Setter.Value>
		</Setter>
		<Setter Property="FontSize" Value="14" />
		<Setter Property="FontFamily" Value="Verdana" />
		<Setter Property="Foreground" Value="LightGray" />
	</Style>

</ResourceDictionary>